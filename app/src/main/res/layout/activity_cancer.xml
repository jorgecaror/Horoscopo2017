<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jorge.horoscopo2017.Cancer"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/universo">

    <ImageView
        android:id="@+id/Cancer"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/cancer"
        android:layout_gravity="center"
        android:background="@color/celesteclaro"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usuarioH"
        android:textSize="30sp"
        android:text="usuario"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@color/blanco"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hCancer"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/blanco"/>
    <Button
        android:layout_width="65dp"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/flecha"
        android:id="@+id/volver"/>

</LinearLayout>
